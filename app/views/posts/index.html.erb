<h1>Posts:</h1>

<div class="container">
  <% @posts.each do |post| %>
    <div class="text-center">
      <h2><a href="posts/<%= post.id %>"><%= post.title %></a></h2>
      <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
    </div>

    <div>
      <!-- <%= raw(post.body).truncate(358) %> -->
      <%= post.body %>
    </div>
    <br>
  <% end %>
</div>