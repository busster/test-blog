<h1>Editing post</h1>


<%= render 'errors' %>

<%= form_for(@post) do |f| %>


  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'show', @post %> |
<%= link_to 'back', posts_path %>